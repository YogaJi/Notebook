@page
@using NoteBook.Models
@model NoteBook.Pages.NoteBookPageModel
@{
}

<script type="text/javascript">
    document.body.style.backgroundColor = "aliceblue";
</script>

<div class="container">
    <div id="notebookTitle">
        <a asp-page="Index" asp-route-id="" style="font-size:18px; color:cornflowerblue">Back</a>
        <h1 style="color: darkslateblue;">@Model.Notebook.Name</h1>
        <div></div>
    </div>
    <hr />
</div>
<div class="container">
    <div class="" style="padding: 20% 10% 8% 10%; background-color: white; ">
        <div class="m-5 booklist">
           
            <ul>
                <li style="margin-bottom:4%">
                    <a asp-page="Journals/Create" asp-route-id="@Model.Notebook.NotebookId">Create new Dairy</a>
                </li>
                @foreach (Journal journal in Model.Notebook.Journals)
                {
                    <li style="margin-top: 2%;">
                        <a asp-page="Journals/Details" asp-route-id="@journal.JournalId">@journal.Title</a>
                        <p>@journal.Date.ToString("dd MMM yyyy")</p>
                    </li>
                }

            </ul>
            
        </div>
        <div style="margin-top: 30%;">
            <a asp-page="Index">Back to List</a>
        </div>
    </div>
</div>







