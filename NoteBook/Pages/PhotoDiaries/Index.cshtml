@page
@model NoteBook.Pages.PhotoDiaries.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 style="color: cornflowerblue">Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PhotoDiary[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoDiary[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoDiary[0].FirstContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoDiary[0].secondContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoDiary[0].template)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PhotoDiary) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.secondContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.template.TemplateId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PhotoDiaryId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PhotoDiaryId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PhotoDiaryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
