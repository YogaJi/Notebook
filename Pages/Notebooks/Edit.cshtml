@page
@model NoteBook.Pages.Notebooks.EditModel

@{
    ViewData["Title"] = "Edit";
}
<script type="text/javascript">
    document.body.style.backgroundColor = "aliceblue";
</script>
<div class="container">
    <div id="notebookTitle">
        <a asp-page="../Index" asp-route-id="" style="font-size:18px; color:cornflowerblue">Back</a>
        <h1>Edit Notebook</h1>
        <div></div>
    </div>
    <hr />
</div>
<div class="container">
    <div class="" style="padding: 20% 10% 8% 10%; background-color: white; ">
        <div class="m-5">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Notebook.NotebookId" />
                <div class="form-group form-notebook-frame">
                    <label asp-for="Notebook.Name" class="control-label" style="font-style: oblique; font-size:20px">Name:</label>
                    <input asp-for="Notebook.Name" class="form-control input-notebook" style="font-size:24px"  />
                    <span asp-validation-for="Notebook.Name" class="text-danger"></span>
                </div>
                <div class="form-group form-create-div">
                    <input type="submit" value="Confirm" class="btn btn-light form-create-btn font-weight-bolder" />
                </div>
            </form>
        </div>
        <div style="margin-top: 30%;">
            <a asp-page="Index">Back to List</a>
        </div>
    </div>
</div>

