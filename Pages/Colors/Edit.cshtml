@page
@model NoteBook.Pages.Colors.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Color</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Color.ColorId" />
            <div class="form-group">
                <label asp-for="Color.ColorString" class="control-label"></label>
                <input type="color" asp-for="Color.ColorString" class="form-control form-control-color">
                @*<input asp-for="BackgroundColor.BGString" class="form-control" />*@
                <span asp-validation-for="Color.ColorString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
